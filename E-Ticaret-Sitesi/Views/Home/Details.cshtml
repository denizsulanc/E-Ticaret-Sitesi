@using E_Ticaret_Sitesi.Entity;
@model Product

@{
    ViewBag.Title = "Details";
}
<div id="product-details" class="container my-5">
    <div class="row">
        <div class="col-md-6">
            @if (Model.Image == null)
            {

                <img src="~/Upload/resimbulunamadi.jpg " style="width: 100%;" class="img-fluid rounded">
            }
            else
            {
                <img src="~/Upload/@Model.Image " style="width: 100%;" class="img-fluid rounded">
            }
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.Name</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @if (Model.IsApproved)
                    {
                        <span class="badge badge-primary">Stokta : @Model.Stock adet var</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">Stokta Yok</span>
                    }
                    <span class="product-number">#5051618</span>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-12">
                    <div id="description">
                        @Model.Description
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-4">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star-half"></i>
                    <span class="badge badge-success">53</span>
                </div>
                <div id="write-review" class="col-md-4">
                    <a href="#">
                        Write a review
                    </a>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12">
                    <h4 id="product-price"><i class="fas fa-lira-sign mr-1"></i>@Model.Price TL</h4>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-12">
                    @using (Html.BeginForm("AddToCart", "Cart"))
                    {
                        @Html.HiddenFor(i => i.Id)
                        <button type="submit" class="btn btn-success">
                            <i class="fa fa-cart-plus"></i>
                            Sepete Ekle
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
