@using E_Ticaret_Sitesi.Models;
@model IEnumerable<ProductModel>

@{
    ViewBag.Title = "List";
}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                @Html.Action("GetCategories","Home") <!--Kendi Action'ı ile çalışan bir partial olduğu için bu şekilde çağırdık-->
            </div>
        </div>
        <div class="col-md-9">
            @if (Model.Count() == 0)
            {
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation"></i>
                    Bu kategoride bir ürün bulunamadı.
                </div>
            }
            else
            {
                <div class="alert alert-success" role="alert">
                    <i class="fas fa-check"></i>
                    <strong>@Model.Count() adet</strong> ürün bulundu.
                </div>
            }

            @Html.Partial("_ProductList", Model)
        </div>
    </div>
</div>
